{
  "name": "customer-backend",
  "version": "1.0.0",
  "description": "Combined customer-facing backend with authentication, profile, and order flows.",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:replica": "cross-env PORT=4001 node src/index.js",
    "start:all": "concurrently \"npm run start\" \"npm run start:replica\"",
    "dev": "cross-env PORT=4000 nodemon src/index.js",
    "dev:replica": "cross-env PORT=4001 nodemon src/index.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:replica\""
  },
  "dependencies": {
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "mongoose": "^8.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.0"
  }
}