{
  "name": "partner-backend",
  "version": "1.0.0",
  "description": "Partner-facing backend for restaurant management and payment processing.",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:replica": "cross-env PORT=4101 node src/index.js",
    "start:all": "concurrently \"npm run start\" \"npm run start:replica\"",
    "dev": "cross-env PORT=4100 nodemon src/index.js",
    "dev:replica": "cross-env PORT=4101 nodemon src/index.js",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:replica\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mongoose": "^8.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.0"
  }
}
